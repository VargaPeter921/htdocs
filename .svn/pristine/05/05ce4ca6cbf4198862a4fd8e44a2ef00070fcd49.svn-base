	function echoAr($i, $ar)
	{
		if (!empty($ar))
		{
			try
			{
				if ($ar->normalAr <> $ar->akciosAr && $ar <> 0)
				{
					$ar = $ar->akciosAr;
				}
				else
				{
					$ar = $ar->normalAr;
				}

				if ($i == 1)
					$ret = number_format(ceil(($ar)*1.27), 0, ',', ' ');
				else
					$ret = number_format(ceil(($ar)), 0, ',', ' ');

				return $ret;
			}
			catch (Exception $a)
			{
				return 0;
			}
		}
		else return 0;
	}

	function clean($string)
	{
		$string = str_replace(' ', '-', $string);

		$accents = array(
				'á' => 'a', 'Á' => 'A',
				'ä' => 'a', 'Ä' => 'A',
				
				'é' => 'e', 'É' => 'E',
				
				'í' => 'i', 'Í' => 'I',
				
				'ó' => 'o', 'Ó' => 'O',
				'ö' => 'o', 'Ö' => 'O',
				'ő' => 'o', 'Ő' => 'O',
				
				'ú' => 'u', 'Ú' => 'U',
				'ü' => 'u', 'Ü' => 'U',
				'ű' => 'u', 'Ű' => 'U'
		);
		
		foreach ($accents as $key => $val)
		{
			$string = preg_replace('#'.$key.'#', $val, $string);
		}

		return preg_replace('/[^A-Za-z0-9\-]/', '', $string);
	}

